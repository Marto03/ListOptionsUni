            <TextBox Margin="0,5,0,0" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Margin="0,10,0,0" Text="Парола:" />
            <PasswordBox
                Margin="0,5,0,10"
                helpers:PasswordBoxHelper.BindPassword="True"
