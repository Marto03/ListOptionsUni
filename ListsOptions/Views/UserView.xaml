<UserControl
    x:Class="ListsOptionsUI.Views.UserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:ListsOptionsUI.Helpers">

    <Grid>
        <!--  фон, по-късно може да стане градиент  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Картичката в центъра  -->
        <Border
            Grid.Row="1"
            Padding="30"
            Background="{StaticResource MainGradientBrush}"
            CornerRadius="20"
            Effect="{DynamicResource DropShadowEffect}">
            <!--<Border.Background>-->
            <!--<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#11998e" Offset="0"/>
                    <GradientStop Color="#38ef7d" Offset="0.5"/>
                    <GradientStop Color="#6dd5ed" Offset="1"/>
                </LinearGradientBrush>


            </Border.Background>-->
            <StackPanel>

                <TextBlock
                    Margin="0,-20,0,0"
                    HorizontalAlignment="Right"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="{Binding CurrentUser.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock.ToolTip>
                        <ToolTip Content="Активен потребител" />
                    </TextBlock.ToolTip>
                </TextBlock>
                <!--  Икона горе  -->
                <Ellipse
                    Width="80"
                    Height="80"
                    Margin="0,-50,0,10"
                    Fill="#123456">
                    <!--<Ellipse.OpacityMask>-->
                    <!--<VisualBrush Stretch="Uniform" Visual="{StaticResource UserIcon}" />
                    </Ellipse.OpacityMask>-->
                </Ellipse>

                <!--<TextBlock
                    Margin="0,15,0,25"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="Login" />-->

                <!--  Email/Username поле  -->
                <Border
                    Margin="0,5,0,10"
                    Background="#F5F5F5"
                    CornerRadius="8"
                    SnapsToDevicePixels="True">
                    <DockPanel
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        LastChildFill="True">
                        <TextBlock
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Text="📧" />
                        <TextBox
                            Margin="-15,0,0,0"
                            VerticalContentAlignment="Center"
                            helpers:PlaceholderHelper.PlaceholderText="Email / Потребител"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Style="{StaticResource RoundedTextBoxStyle}"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                    </DockPanel>
                </Border>
                <!--  Парола поле  -->
                <Border
                    Margin="0,5,0,10"
                    Background="#F5F5F5"
                    CornerRadius="8"
                    SnapsToDevicePixels="True">
                    <DockPanel
                        Height="40"
                        VerticalAlignment="Center"
                        LastChildFill="True">
                        <TextBlock
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Text="🔒" />
                        <PasswordBox
                            Margin="-4,0"
                            VerticalContentAlignment="Center"
                            helpers:PasswordBoxHelper.BindPassword="True"
                            helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14" />
                    </DockPanel>
                </Border>

                <!--  Запомни ме + Forgot  -->
                <DockPanel Margin="0,5,0,15">
                    <!--<CheckBox Content="Remember me" />-->
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        FontSize="12"
                        Foreground="Orange"
                        Text="Forgot Password?" />
                </DockPanel>

                <!--  Бутон за логин  -->
                <Button
                    Width="150"
                    Height="40"
                    HorizontalAlignment="Center"
                    BorderThickness="0"
                    Command="{Binding LoginCommand}"
                    Content="LOGIN"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
