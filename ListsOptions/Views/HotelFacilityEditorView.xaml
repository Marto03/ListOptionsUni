<UserControl
    x:Class="ListsOptionsUI.Views.HotelFacilityEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ListsOptionsUI.Helpers"
    xmlns:local="clr-namespace:ListsOptionsUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:regexes="clr-namespace:ListsOptionsUI.Regexes"
    mc:Ignorable="d">
    <Grid Margin="10,0,-20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="{Binding CurrentHotel, UpdateSourceTrigger=PropertyChanged}">
            <StackPanel>
                <!--  Добавяне на удобство  -->
                <StackPanel Margin="0,0,0,10" Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  ComboBox за избора на удобство  -->
                        <ComboBox
                            Grid.Column="0"
                            Margin="5"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding AvailableFacilities}"
                            SelectedItem="{Binding SelectedFacility}" />

                        <!--  TextBox за цена  -->
                        <TextBox
                            Grid.Column="1"
                            Margin="5"
                            helpers:PlaceholderHelper.PlaceholderText="Цена">
                            <TextBox.Text>
                                <Binding Path="NewPrice" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <regexes:RegexValidationRule Pattern="^\d+(\.\d{1,2})?$" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!--  TextBox за отстъпка  -->
                        <TextBox
                            Grid.Column="2"
                            Margin="5"
                            helpers:PlaceholderHelper.PlaceholderText="Отстъпка %">
                            <TextBox.Text>
                                <Binding Path="NewDiscount" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <regexes:RegexValidationRule Pattern="^([1-9][0-9]?|100)$" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>

                        </TextBox>

                        <!--  Бутон за добавяне  -->
                        <Button
                            Grid.Column="3"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Command="{Binding AddFacilityCommand}"
                            Content="Добави" />
                    </Grid>
                </StackPanel>


                <!--  Списък с текущи удобства  -->
                <ListBox
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    ItemsSource="{Binding FacilityList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="5" Text="{Binding FacilityName}" />
                                <TextBlock Text=" | Цена: " />
                                <TextBlock Margin="5" Text="{Binding Price}" />
                                <TextBlock Text=" | Отстъпка: " />
                                <TextBlock Margin="5" Text="{Binding Discount}" />
                                <Button
                                    Margin="10,0"
                                    Command="{Binding DataContext.RemoveFacilityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Премахни" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Запазване  -->
                <Button
                    Grid.Row="2"
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Right"
                    Command="{Binding SaveCommand}"
                    Content="Запази" />

            </StackPanel>
        </GroupBox>
        <local:HotelListByFacilityView
            Grid.Row="3"
            Margin="0,20,0,0"
            DataContext="{Binding HotelListByFacility}" />
    </Grid>
</UserControl>
